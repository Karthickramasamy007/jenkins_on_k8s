pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout your source code from version control
                //checkout scm
                sh 'echo hello checkout'
            }
        }

        stage('Execute only for the fix-* branch'){
            when {
                branch "fix-*"
            }
            steps{
                sh 'echo hello fix-* branch'
            }
        }

        stage('Execute only for the PR-* branch'){
            when {
                branch "PR-*"
            }
            steps{
                sh 'echo hello PR-* branch'
            }
        }
        
        stage('Build') {
            steps {
                // Compile and build your Java application
                sh 'echo hello build'
            }
        }
        
        stage('Test') {
            steps {
                // Run tests for your Java application
                sh 'echo hello test'
            }
        }
        
        stage('Deploy') {
            steps {
                // Deploy your application to a server or container
               sh 'echo hello deploy'
            }
        }
    }
}
